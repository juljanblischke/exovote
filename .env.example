# =========================
# ExoVote Environment Config
# =========================

# Database (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=exovote
POSTGRES_USER=exovote
POSTGRES_PASSWORD=changeme_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=exovote
RABBITMQ_PASSWORD=changeme_in_production

# Backend (.NET)
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
CONNECTION_STRING=Host=${POSTGRES_HOST};Port=${POSTGRES_PORT};Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}

# Frontend (Next.js)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
INTERNAL_API_URL=http://backend:5000

# Deployment
DOMAIN=exovote.example.com
ACME_EMAIL=admin@example.com
